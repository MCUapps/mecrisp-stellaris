# Special target for running on ARM Linux and Android:

cd mecrisp-stellaris-source

cd linux
./assemble
cp mecrisp-stellaris-linux ../../linux
cd ..

cd linux-ra
./assemble
cp mecrisp-stellaris-linux ../../linux-ra
cd ..
